<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/my_linear">

        <com.example.studyandtestapp.CustomView.TitleBar
            android:id="@+id/titlebar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:title_text="@string/app_name"
            app:title_text_color="@color/titleText"
            app:title_bg="@color/titleBg"/>


        <com.example.studyandtestapp.CustomView.HorizontalView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/lv_one"/>
            <ListView
                android:id="@+id/lv_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


        </com.example.studyandtestapp.CustomView.HorizontalView>

</LinearLayout>